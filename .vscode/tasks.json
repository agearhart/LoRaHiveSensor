{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "LoRaHive-Setup",
            "type": "shell",
            "command": "arduino-cli.exe core install arduino:avr",
            "group": "none",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "LoRaHiveSensor",
            "type": "shell",
            "command": "arduino-cli compile -v -b arduino:avr:mini --library ${workspaceFolder}\\libraries\\RadioHead ${workspaceFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "LoRaHiveSensor-Test",
            "type": "shell",
            "command": "arduino-cli upload -p COM18 -v --fqbn arduino:avr:mini ${workspaceFolder}/LoRaHiveSensor.ino",
            "group": "test",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        }
    ]
}
